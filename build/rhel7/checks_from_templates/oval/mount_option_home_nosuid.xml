<def-group>
  <definition class="compliance" id="mount_option_home_nosuid" version="2">
    <metadata>
        <title>Add nosuid Option to /home</title>
        
    <affected family="unix">
    <platform>Red Hat Enterprise Linux 7</platform>
    </affected>
        <description>/home should be mounted with mount option nosuid.</description>
    </metadata>
    <criteria operator="OR">
      <criterion comment="nosuid on /home"
        test_ref="test_home_partition_nosuid_optional_yes"/>
    
    </criteria>
  </definition>

  <linux:partition_object version="1"
    id="object_home_partition_nosuid_optional_yes">
    <linux:mount_point>/home</linux:mount_point>
  </linux:partition_object>

  <linux:partition_state version="1"
    id="state_home_partition_nosuid_optional_yes">

    <linux:mount_options datatype="string" entity_check="at least one" operation="equals">nosuid</linux:mount_options>
  </linux:partition_state>


  <linux:partition_test check="all" check_existence="all_exist" version="2"
    comment="nosuid on /home optional yes"
    id="test_home_partition_nosuid_optional_yes">
    <linux:object object_ref="object_home_partition_nosuid_optional_yes"/>
    <linux:state state_ref="state_home_partition_nosuid_optional_yes"/>
  </linux:partition_test>

  
</def-group>